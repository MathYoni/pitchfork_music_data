SELECT reviews.reviewid, reviews.best_new_music, reviews.author, genres.genre, labels.label, reviews.score 
FROM "reviews"
INNER JOIN "genres"
ON reviews.reviewid = genres.reviewid
INNER JOIN "labels"
ON reviews.reviewid = labels.reviewid;
